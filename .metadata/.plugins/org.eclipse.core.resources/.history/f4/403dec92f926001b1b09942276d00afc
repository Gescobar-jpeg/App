package movingCastle;

public class App {

	public static void main(String[] args) {
		// TODO Auto-generated method stub//
		
		//third step//
		

		double itemPrice = 4.99;
		
		int amountInWallet = 20;

		int friends = 1;
		
		int age = 26;
		
		String firstName = "Gustavo";
		
		String lastName = "Escobar";
		
		char middleInitial = 'S';
		
		
		System.out.println(itemPrice);

		System.out.println(amountInWallet);

		System.out.println(friends);

		System.out.println(age);

		System.out.println(firstName);

		System.out.println(lastName);

		System.out.println(middleInitial);


		double newAmountInWallet = amountInWallet - itemPrice;
		
		int newAge1 = age + 1;
		
		int newFriends1 = friends + 1;
		
		int friendsPerYear = newAge1 + newFriends1;
		
		String fullName = firstName + middleInitial + lastName;
		
		
		System.out.println(newAmountInWallet);
		
		System.out.println(newAge1);
		
		System.out.println(newFriends1);
		
		System.out.println(friendsPerYear);
		
		System.out.println(fullName);
		
		
		
		
		
		
		
		
		
	}

}
